<robot name="simple_box">
  <link name="my_box">
    <origin xyz="1 0 0"/>
    <geometry>
	  <box size="1 10 5"/>
	</geometry>
    <inertial>
      <origin xyz="1 0 0" /> 
      <mass value="0.0" />
      <inertia  ixx="0.001" ixy="0.0"  ixz="0.0"  iyy="0.001"  iyz="0.0"  izz="0.001" />
    </inertial>
    <visual>
      <origin xyz="1 0 0"/>
      <geometry>
        <box size="1 10 5" />
      </geometry>
    </visual>
  </link>
  <collision>
    <origin xyz="1 0 0"/>
    <geometry>
      <box size="1 10 10" />
	</geometry>
  </collision>
  <gazebo reference="my_box">
    <material>Gazebo/Blue</material>
  </gazebo>
</robot>
